#include <16f877a.h>
#FUSES hs,NOWDT,PUT,PROTECT,NOBROWNOUT,NOLVP,NOCPD
#device adc=10
#use delay(clock=20000000)
#include "flex_lcd.c"
float g,c,tem,a,b;
float i=0;
float sensorvalue=0;
void main()
 
{



setup_adc(ADC_CLOCK_INTERNAL); // initialize ADC with a sampling rate of Crystal/4 MHz
setup_adc_ports(ALL_ANALOG  );   // set PIN_A0 as analog input channel
delay_ms(5);
lcd_init();

printf(lcd_putc,"\Battery SOC");
delay_ms(1000);


  while(1)
  {
  set_adc_channel(0);
sensorvalue=read_adc();
float v=(sensorvalue*(3.33/1023.00));
float voltage=v*2.4;
printf(lcd_putc,"\f%f",voltage);
delay_ms(100);
}
}













 
 
 
 
 
 
 
 
