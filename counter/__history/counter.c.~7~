#include <16f877a.h>
#use delay(clock=20M)
#fuses hs,nowdt,nocpd,nolvp,noprotect
#use rs232(baud=9600, xmit=PIN_C6, rcv=PIN_C7, ERRORS)
unsigned int8 bilgi; 
unsigned int8 a,b; 
unsigned int16 c,d,e;
#include "flex_lcd.c"
unsigned int16 value;

void main()
{

   delay_ms(500);
  lcd_init();
delay_ms(1000);

   while(1)
   {

setup_timer_1(t1_external | T1_DIV_BY_1);
      set_timer1(0);   
      delay_ms(1000);         // in protues, should be 1000/3
      setup_timer_1(T1_DISABLED);
      value=get_timer1();
      printf("\ffrequency %lu",value);
output_high(pin_d0); 
   }
}
